# Since consistent formatting is a requirement
# http://editorconfig.org/

# Based on Airbnb .editorconfig file

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
